<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/root_layout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_trans_background"
                android:orientation="vertical">

    <!--这里使用一个布局包裹以做出边界的效果-->
    <FrameLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <View
            android:id="@+id/animationLayout"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@drawable/scale"/>

        <com.widget.library.refresh.recyclerview.DDRecyclerViewLayout
            android:id="@+id/pop_mRecyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </FrameLayout>

</RelativeLayout>